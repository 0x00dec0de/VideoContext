{
  "name": "videocontext",
  "version": "0.35.0",
  "description": "A WebGL & HTML5 graph based video composition library",
  "keywords":["video", "context", "composition", "timeline", "html5", "webgl"],
  "contributors": [
    {
      "name": "Matthew Shotton",
      "email": "matthew.shotton@bbc.co.uk"
    }
  ],
  "scripts": {
    "build_all": "./node_modules/webpack/bin/webpack.js --config webpack.config.js && ./node_modules/webpack/bin/webpack.js --config webpack.commonjs2.config.js && node ./node_modules/esdoc/out/src/ESDocCLI.js -c esdoc.json",
    "doc": "node ./node_modules/jsdoc/jsdoc.js -c jsdoc.json && cp dist/videocontext.* docs/dist/",
    "build": "node ./node_modules/mocha/bin/mocha --compilers js:babel-core/register && ./node_modules/webpack/bin/webpack.js --config webpack.config.js && ./node_modules/webpack/bin/webpack.js --config webpack.commonjs2.config.js && npm run doc",
    "dev": "./node_modules/webpack/bin/webpack.js --watch --config webpack.config.js & ./node_modules/reload/bin/reload -b"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^5.6.5",
    "babel-loader": "^5.1.4",
    "chai": "3.4.1",
    "eslint": "^3.9.1",
    "eslint-loader": "^1.4.0",
    "http-server": "^0.8.5",
    "jsdoc": "^3.4.0",
    "mocha": "2.3.4",
    "node-libs-browser": "^0.5.2",
    "reload": "^1.0.1",
    "webpack": "^1.9.11"
  },
  "main": "dist/videocontext.commonjs2.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  }
}
